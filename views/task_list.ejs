<table class="todolist">
    <% tasks.forEach((task, index) => { %>
        <tr>
            <!-- Colonne pour la case à cocher -->
            <td class="check-box">
                <input type="checkbox" id="checkbox-<%= index %>">
            </td>
            <!-- Colonne pour le texte de la tâche -->
            <td class="task-col">
                <a href="/<%= index %>"><%= task %></a>
            </td>
            <!-- Colonne pour le bouton "Supprimer" -->
            <td class="delete-col">
                <button 
                    hx-delete="/delete-task/<%= index %>" 
                    hx-target="#task-list" 
                    hx-swap="innerHTML">
                    Supprimer
                </button>
            </td>
        </tr>
    <% }); %>
</table>
