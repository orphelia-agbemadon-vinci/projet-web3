<table style="border: 1px solid black; margin: auto;">
    <% tasks.forEach((task, index) => { %>
        <tr style="vertical-align: middle;">
            <!-- Colonne pour la case à cocher -->
            <td style="width: 10%; text-align: center;">
                <input type="checkbox" id="task-<%= index %>">
            </td>
            <!-- Colonne pour le texte de la tâche -->
            <td style="width: 70%;">
                <label for="task-<%= index %>"><%= task %></label>
            </td>
            <!-- Colonne pour le bouton "Supprimer" -->
            <td style="width: 20%; text-align: right;">
                <button 
                    style="color: red; border: 1px solid red; background-color: transparent; cursor: pointer;" 
                    hx-delete="/delete-task/<%= index %>" 
                    hx-target="#task-list" 
                    hx-swap="innerHTML">
                    Supprimer
                </button>
            </td>
        </tr>
    <% }); %>
</table>
