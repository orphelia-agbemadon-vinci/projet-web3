    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DunDeal</title>
    <link rel="stylesheet" href="styles.css">
    <script src="https://unpkg.com/htmx.org"></script>
</head>
<body>
    <div class="menu" id="menu">
        <div class="logo">
            <img src="logo.png" alt="Logo" id="logo">
        </div>
        <ul>
            <li><img class="icon" src="images/task.png" alt=""> T창ches</li>
            <li><img class="icon" src="images/important.png" alt=""> Important</li>
        </ul>
    </div>
    <div class="container">
        <h1>To-Do List</h1>

        <!-- Formulaire pour ajouter une t창che -->
        <form hx-post="/add-task" hx-target="#task-list" hx-swap="innerHTML">
