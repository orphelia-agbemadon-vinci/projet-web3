<div id="title-container">
    <h1>To-Do List</h1>
</div>

<!-- Formulaire pour ajouter une tâche -->
<form id="add-task-form" hx-post="/add-task" hx-target="#task-list" hx-swap="innerHTML">
    <input type="text" id="task-input" name="task" placeholder="Nouvelle tâche..." required>
    <button type="submit">Ajouter</button>
</form>

<!-- Liste des tâches -->
<div id="task-list">
    <%- include('task_list', { tasks: tasks }); %>
</div>

<script>
    document.getElementById('add-task-form').addEventListener('htmx:afterRequest', function() {
        document.getElementById('task-input').value = '';
    });
</script>