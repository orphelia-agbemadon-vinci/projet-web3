<!-- Boutons pour filtrer -->
<div id="filters">
    <button hx-get="/tasks" hx-target="#task-list" hx-swap="innerHTML">Toutes</button>
    <button hx-get="/tasks/filter/completed" hx-target="#task-list" hx-swap="innerHTML">Complétées</button>
    <button hx-get="/tasks/filter/important" hx-target="#task-list" hx-swap="innerHTML">Importantes</button>
</div>

<div id="title-container">
    <h1>To-Do List</h1>
</div>

<!-- Formulaire pour ajouter une tâche -->
<form id="add-task-form" hx-post="/tasks/add" hx-target="#task-list" hx-swap="innerHTML">
    <input type="text" id="task-input" name="task" placeholder="Nouvelle tâche..." required>
    <button type="submit">Ajouter</button>
</form>

<!-- Liste des tâches -->
<div id="task-list">
    <%- include('tasks/task_list', { tasks: tasks, isHistory, isImportant }); %>
</div>

<script src="/scripts/formHandler.js"></script>